# Application
APP_NAME=IHC-Platform
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
API_VERSION=v1

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database
DATABASE_URL=postgresql://ihc_user:ihc_password@localhost:5432/ihc_db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis Cache
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
CACHE_TTL=3600

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ML Models
MODEL_PATH=./models/saved
ELIGIBILITY_MODEL_PATH=./models/saved/eligibility_classifier.pth
SPENDING_MODEL_PATH=./models/saved/spending_predictor.pth
ASSISTANT_MODEL_PATH=./models/saved/assistant_model.pth

# Model Configuration
MAX_SEQUENCE_LENGTH=512
BATCH_SIZE=32
CONFIDENCE_THRESHOLD=0.85

# External APIs
IRS_API_KEY=your-irs-api-key
MEPS_DATA_URL=https://meps.ahrq.gov/data

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/ihc.log

# Monitoring
PROMETHEUS_PORT=9090
METRICS_ENABLED=True

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@ihc-platform.com

# Celery (for async tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Security
HIPAA_ENCRYPTION_KEY=your-hipaa-encryption-key
DATA_ENCRYPTION_ENABLED=True

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000